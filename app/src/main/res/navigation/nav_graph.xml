<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/levelsFragment">

    <fragment
        android:id="@+id/levelsFragment"
        android:name="ru.palyanaff.samsung_project_english_learning.screens.levels.LevelsFragment"
        android:label="fragment_levels"
        tools:layout="@layout/fragment_levels" >
        <action
            android:id="@+id/action_levelsFragment_to_taskFragment"
            app:destination="@id/taskFragment" />
    </fragment>

    <fragment
        android:id="@+id/runnerFragment"
        android:name="ru.palyanaff.samsung_project_english_learning.screens.RunnerFragment"
        android:label="fragment_runner"
        tools:layout="@layout/fragment_runner" />
    <fragment
        android:id="@+id/dictionaryFragment"
        android:name="ru.palyanaff.samsung_project_english_learning.screens.dictionary.DictionaryFragment"
        android:label="fragment_dictionary"
        tools:layout="@layout/fragment_dictionary" >
        <action
            android:id="@+id/action_dictionaryFragment_to_wordFragment"
            app:destination="@id/wordFragment" />
    </fragment>

    <fragment
        android:id="@+id/taskFragment"
        android:name="ru.palyanaff.samsung_project_english_learning.screens.levels.task.TaskFragment"
        android:label="fragment_task"
        tools:layout="@layout/fragment_task" >
        <argument
            android:name="Task"
            app:argType="string[]" />
    </fragment>

    <fragment
        android:id="@+id/wordFragment"
        android:name="ru.palyanaff.samsung_project_english_learning.screens.dictionary.WordFragment"
        android:label="fragment_word_list"
        tools:layout="@layout/fragment_word_list" >
        <argument
            android:name="dictionaryHeader"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/examsFragment"
        android:name="ru.palyanaff.samsung_project_english_learning.screens.ExamsFragment"
        android:label="fragment_exams"
        tools:layout="@layout/fragment_exams" />
    <fragment
        android:id="@+id/menuFragment"
        android:name="ru.palyanaff.samsung_project_english_learning.screens.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" />
</navigation>